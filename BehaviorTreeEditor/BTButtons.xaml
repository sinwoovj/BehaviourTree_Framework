<UserControl x:Class="BehaviorTreeEditor.BTButtons"
			 x:Name="MyBTButtons"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 mc:Ignorable="d" 
			 d:DesignHeight="600" d:DesignWidth="200">
	<Grid Margin="10, 30, 10, 10">
		<Border Background="GhostWhite" BorderBrush="Gainsboro" BorderThickness="1" CornerRadius="8,8,8,8">
			<StackPanel Margin="10" Width="140">
				<Button Name="NewButton" Click="NewButton_Click">New</Button>
                <Button Name="RenameButton" Margin="0,10" Click="RenameButton_Click">Rename</Button>
				<Button Name="LoadButton" Click="LoadButton_Click">Open</Button>
                <Separator Margin="0,10" />
				<Button Name="ValidateButton" Click="ValidateButton_Click">Validate</Button>
                <Button Name="SaveButton" Margin="0,10" Click="SaveButton_Click" IsEnabled="False">Save</Button>
				<Button Name="SaveAsButton" Click="SaveAsButton_Click" IsEnabled="False">Save As...</Button>
			</StackPanel>
		</Border>
	</Grid>
</UserControl>
