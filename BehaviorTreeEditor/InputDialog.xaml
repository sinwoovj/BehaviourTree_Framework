<Window x:Class="BehaviorTreeEditor.InputDialog"
        x:Name="InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input" Height="170" Width="400">
    <Grid Margin="15">
        <Label Content="Behavior Tree Name : " HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top"/>
        <TextBox Name="InputText" HorizontalAlignment="Left" Height="23" Margin="15,31,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="332"/>
        <Button Content="Cancel" Click="CancelButton_Click" Name="CancelButton" HorizontalAlignment="Left" Margin="272,69,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Ok" Click="OKButton_Click" Name="OKButton" HorizontalAlignment="Left" Margin="182,69,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
